@using MvcCarManagerment.Service;

<!DOCTYPE html>
<html>
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta charset="utf-8" />
    <link href="~/favicon.ico" rel="shortcut icon" type="image/x-icon" />
    <meta name="viewport" content="width=device-width" />
    <title>远辰汽车服务公司后台管理系统</title>
    @Styles.Render("~/Areas/Admin/Content/bootstrap/css/bootstrap.min.css")
    @Styles.Render("~/Areas/Admin/Content/bootstrap/css/bootstrap-responsive.css")
    @Styles.Render("~/Areas/Admin/Content/font-awesome/css/font-awesome.css")
    @Styles.Render("~/Areas/Admin/Content/theme.css")
    @Styles.Render("~/Areas/Admin/Content/site.css")
    @Scripts.Render("~/Areas/Admin/bundles/jquery-1.8.1.min.js")
    @Scripts.Render("~/Areas/Admin/bundles/bootstrap/bootstrap.js")
    @Scripts.Render("~/Areas/Admin/bundles/jquery.jqplot.js")
    @*    @Scripts.Render("~/Areas/Admin/bundles/graphDemo.js")*@
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <div class="navbar">
        <div class="navbar-inner">
            <div class="container-fluid">
                <ul class="nav pull-right">
                    <li id="fat-menu" class="dropdown"><a href="#" id="drop3" role="button" class="dropdown-toggle"
                        data-toggle="dropdown"><i class="icon-user"></i>@User.Identity.Name<i class="icon-caret-down"></i></a>
                        <ul class="dropdown-menu">
                            @*<li><a tabindex="-1" href="#">修改密码</a></li>*@
                            <li><a tabindex="-1" href="/Home">返回首页</a></li>
                            @using (Html.BeginForm("LogOff", "Logion", FormMethod.Post, new { id = "logoutForm" }))
                            {
                                @Html.AntiForgeryToken()
                                <li><a href="javascript:document.getElementById('logoutForm').submit()">注销</a></li>
                            }
                        </ul>
                    </li>
                </ul>
                <a class="brand" href="/Admin/"><span class="first">远辰汽车服务公司后台管理系统</span></a>
            </div>
        </div>
    </div>
    <div class="container-fluid">
        <div class="row-fluid">
            <div class="span3">
                <div class="sidebar-nav">
                    <div class="nav-header">
                        <i class="icon-th-list"></i>栏目信息管理
                    </div>
                    <ul id="dashboard-menu" class="nav nav-list collapse in">
                        <li>@Html.ActionLink("关于我们", "Index", "AboutManager")</li>
                        <li>@Html.ActionLink("公司新闻", "Index", "NewsManager")</li>
                        <li>@Html.ActionLink("优惠活动", "Index", "OfferManager")</li>
                        <li>@Html.ActionLink("高端婚庆策划", "Index", "WedManager")</li>
                        <li>@Html.ActionLink("高端商务礼仪", "Index", "BusinessManager")</li>
                        <li>@Html.ActionLink("高端汽车服务", "IndexList", "CarServiceManager")</li>
                        <li>@Html.ActionLink("车辆订购、按揭", "Index", "CarOrderManager")</li>
                        <li>@Html.ActionLink("车辆抵押", "Index", "PledgeManager")</li>
                        <li>@Html.ActionLink("二手车交易、评估", "Index", "HandCarManager")</li>
                        <li>@Html.ActionLink("客户服务", "Index", "CustomerManager")</li>
                        <li>@Html.ActionLink("首页图片管理", "Index", "ImageManager")</li>
                        <li>@Html.ActionLink("广告图片管理", "ADImageIndex", "ImageManager")</li>
                    </ul>
                </div>
            </div>
            <div class="span9">
                <div class="stats">
                    <p class="stat">
                        <span class="number">0</span>信息</p>
                </div>
                <div>
                    @RenderBody()
                </div>
            </div>
        </div>
        <footer>
            <hr />
            <p>&copy; 2013 安徽远辰汽车服务公司</p>
        </footer>
    @Scripts.Render("~/bundles/jquery")
    @RenderSection("scripts", required: false)
</body>
</html>
