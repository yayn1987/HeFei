@model MvcCarManagerment.Models.RegisterModel
@{
    ViewBag.Title = "注册";
    Layout = null;
}
<!DOCTYPE html>
<html lang="zh-cn" class="no-js">
<!--<![endif]-->
<head>
    <meta charset="UTF-8" />
    <title>注册用户</title>
    <meta name="author" content="Codrops" />
    <link rel="stylesheet" type="text/css" href="../../css/demo.css" />
    <link href="../../css/style.css" rel="stylesheet" type="text/css" />
    <link rel="stylesheet" type="text/css" href="../../css/animate-custom.css" />
</head>
<style type="text/css">
    .validation-summary-errors
    {
        font-weight: bold;
        color: #ff0000;
        font-size: 17px;
    }
    .field-validation-error
    {
        color: #ff0000;
    }
</style>
<body>
    <div class="container">
        <header>
               
				<nav class="codrops-demos">
                 <h1>注册用户</h1>
				</nav>
            </header>
        <section>				
                <div id="container_demo" >
                    <a class="hiddenanchor" id="toregister"></a>
                    <a class="hiddenanchor" id="tologin"></a>
                    <div id="wrapper">
                        <div id="login" class="animate form">
                            <form  method="post"  > 
                             @Html.AntiForgeryToken()
                             @Html.ValidationSummary(true)
                                <h1>Register</h1> 
                                <p> 
                                    <label for="UserName" class="uname" data-icon="u" > 用户名 </label>
                                      @Html.TextBoxFor(entity => entity.UserName, new { placeholder = "用户名" })
                                      @Html.ValidationMessageFor(entity => entity.UserName)
                                </p>
                                <p> 
                                    <label for="UserPwd" class="youpasswd" data-icon="p"> 密码 </label>
                                       @Html.PasswordFor(entity => entity.Password, new { placeholder = "密码" })
                                       @Html.ValidationMessageFor(entity => entity.Password)
                                </p>
                                  <p> 
                                    <label for="UserPwd" class="youpasswd" data-icon="p"> 再输入一次密码 </label>
                                       @Html.PasswordFor(entity => entity.ConfirmPassword, new { placeholder = "再输入一次密码" })
                                       @Html.ValidationMessageFor(entity => entity.ConfirmPassword)
                                </p>
                                <p class="login button">
                                       <input type="submit" value="注册"  />
								</p>
                            
                            </form>
                        </div>
						
                    </div>
                </div>  
            </section>
    </div>
</body>
</html>
