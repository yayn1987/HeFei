@model MvcCarManagerment.Models.UserModel
@{
    ViewBag.Title = "用户登录";
    Layout = null;
}
<!DOCTYPE html>
<html lang="zh-cn" class="no-js">
<!--<![endif]-->
<head>
    <meta charset="UTF-8" />
    <title>后台登录管理</title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta name="description" content="Login and Registration Form with HTML5 and CSS3" />
    <meta name="keywords" content="html5, css3, form, switch, animation, :target, pseudo-class" />
    <meta name="author" content="Codrops" />
    <link rel="shortcut icon" href="../favicon.ico">
    <link rel="stylesheet" type="text/css" href="../../css/demo.css" />
    <link href="../../css/style.css" rel="stylesheet" type="text/css" />
    <link rel="stylesheet" type="text/css" href="../../css/animate-custom.css" />
</head>
<style type="text/css">
    .validation-summary-errors
    {
        font-weight: bold;
        color: #ff0000;
        font-size: 17px;
    }
    .field-validation-error
    {
        color: #ff0000;
    }
</style>
<body>
    <div class="container">
        <header>
               
				<nav class="codrops-demos">
                 <h1>后台登录管理系统</h1>
					<span>版本号：V1.0</span>
				</nav>
            </header>
        <section>				
                <div id="container_demo" >
                    <a class="hiddenanchor" id="toregister"></a>
                    <a class="hiddenanchor" id="tologin"></a>
                    <div id="wrapper">
                        <div id="login" class="animate form">
                            <form  method="post"  > 
                             @Html.AntiForgeryToken()
                             @Html.ValidationSummary(true)
                                <h1>Log in</h1> 
                                <p> 
                                    <label for="UserName" class="uname" data-icon="u" > 用户名 </label>
                                      @Html.TextBoxFor(entity => entity.UserName, new { placeholder = "用户名" })
                                      @Html.ValidationMessageFor(entity => entity.UserName)
                                </p>
                                <p> 
                                    <label for="UserPwd" class="youpasswd" data-icon="p"> 密码 </label>
                                       @Html.PasswordFor(entity => entity.UserPwd, new { placeholder = "密码" })
                                       @Html.ValidationMessageFor(entity => entity.UserPwd)
                                </p>
                                <p class="login button">
                                       <input type="submit" value="登录"  />
								</p>
                                 <p>
                                     @Html.ActionLink("返回首页", "Index", "Home")
								</p>
                                <p class="change_link">
									没有注册 ?
                                     @Html.ActionLink("注册", "Register")
								</p>
                            </form>
                        </div>
						
                    </div>
                </div>  
            </section>
    </div>
</body>
</html>
